<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:layout_marginVertical="@dimen/margin_8"
        android:background="@color/ic_launcher_ble_background"
        android:clickable="true"
        android:elevation="20dp"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="40dp"
        android:focusable="true"
        android:padding="16dp"
        android:requiresFadingEdge="horizontal">

        <ImageView
            android:id="@+id/blind_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/blinds" />

        <TextView
            android:id="@+id/device_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/blind_icon"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/device_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/device_ip"
            android:layout_toEndOf="@+id/blind_icon" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>